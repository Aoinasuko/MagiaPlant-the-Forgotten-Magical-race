<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="ApparelMakeableBase">
	<defName>MgP_MaidBand</defName>
	<label>MgP MaidBand</label>
	<description>A hair band for MgP Servants.</description>
	<graphicData>
		<texPath>BEPFT_Cloth/MaidBand/MaidBand</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<techLevel>Medieval</techLevel>
	<costStuffCount>20</costStuffCount>
	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>
	<tradeability>Sellable</tradeability>
	<recipeMaker>
		<researchPrerequisite>MgP_Costumes</researchPrerequisite>
		<recipeUsers>
			<li>MgP_CraftTable</li>
		</recipeUsers>
	</recipeMaker>
	<thingCategories>
		<li>MgP_Apparel</li>
	</thingCategories>
	<statBases>
		<MaxHitPoints>200</MaxHitPoints>
		<WorkToMake>1500</WorkToMake>
		<Mass>0.03</Mass>
		<Flammability>0.8</Flammability>
		<StuffEffectMultiplierArmor>0.05</StuffEffectMultiplierArmor>
		<EquipDelay>2</EquipDelay>
	</statBases>
	<apparel>
		<developmentalStageFilter>Child,Adult</developmentalStageFilter>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
		<bodyPartGroups>
			<li>UpperHead</li>
		</bodyPartGroups>
		<wornGraphicPath>BEPFT_Cloth/MaidBand/MaidBand</wornGraphicPath>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>MgP_Apparel</li>
		</tags>
		<defaultOutfitTags>
			<li>Worker</li>
		</defaultOutfitTags>
	</apparel>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>10</weight>
				<only>(1.0,1.0,1.0,1)</only>
			</li>
		</options>
	</colorGenerator>
	<comps>
		<li>
			<compClass>CompColorable</compClass>
		</li>
	</comps>
</ThingDef>

</Defs>
